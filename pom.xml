		                <outputEncoding>${project.build.sourceEncoding}</outputEncoding>
		                <generateProjectInfo>false</generateProjectInfo>
		                <generateReports>false</generateReports>
		            </configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<profiles>
		<profile>
